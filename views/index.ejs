    </section>

    <script>
        $(document).ready(function () {
            // Al cargar la página, ocultar todos los form-steps excepto el primero
            $('.form-step').not(':first').hide();

            // Configurar la barra de progreso
            var totalSteps = $('.form-step').length;
            var currentStep = 1;
            var progressBar = $('.progress-bar');
            var stepInfo = $('#step-info');

            updateProgressBar();

            // Al hacer clic en el botón "Next"
            $('.next-button').click(function () {
                // Ocultar el form-step actual
                $(this).closest('.form-step').hide();

                // Mostrar el siguiente form-step
                var nextStep = $(this).closest('.form-step').next('.form-step');
                nextStep.show();

                // Actualizar el progreso
                currentStep++;
                updateProgressBar();
            });

            $('.previous-button').click(function () {
                // Ocultar el form-step actual
                $(this).closest('.form-step').hide();

                // Mostrar el form-step anterior
                var prevStep = $(this).closest('.form-step').prev('.form-step');
                prevStep.show();

                // Actualizar el progreso
                currentStep--;
                updateProgressBar();
            });

            function updateProgressBar() {
                var progress = (currentStep / totalSteps) * 100;
                progressBar.width(progress + '%').attr('aria-valuenow', progress);

                // Actualizar el label del paso actual
                stepInfo.text('Paso ' + currentStep + ' de ' + totalSteps);
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            // Manejar clic en el botón de iniciar sesión
            $('.login-button').click(function () {
                $('#form-container').toggleClass('flipped');
            });
        });

    </script>
